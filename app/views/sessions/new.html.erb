<div class="new-session">
  <h1>Login</h1>
  <small>To view your past results and save new ones</small>
  <hr>

  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email%><br/>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %><br/>
      <%= password_field_tag :password %>
    </div>
    <div class="field">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
    </div>
    <div class="actions">
      <%= submit_tag "Login", :class => "btn-large btn-primary" %>
    </div>
  <% end %>
</div>