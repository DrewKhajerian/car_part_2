<!DOCTYPE html>
<html>
<head>
  <title>FindYourCar</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
	<body>
		<div class="main">	
			<%= render 'layouts/header' %>
			
			<% if flash[:notice] %>
		    <div class="alert alert-success">
		      <%= flash[:notice] %>
		    </div>
		  <% elsif flash[:alert] %>
		    <div class="alert alert-error">
		      <%= flash[:alert] %>
		    </div>
		  <% end %>

  		

			<%= yield %>

			<%= render 'layouts/footer' %>
		</div>



	</body>
</html>
